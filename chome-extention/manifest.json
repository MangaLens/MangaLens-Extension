{
  "manifest_version": 3,
  "name": "Manga Translator",
  "version": "1.0.0",
  "description": "Translate manga using offscreen OCR",

  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "offscreen",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://*.pximg.net/*",
    "https://*.pixiv.net/*",
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "web_accessible_resources": [
    {
      "resources": ["offscreen.html"],
      "matches": ["<all_urls>"]
    }
  ],

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "pixiv_referer",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
